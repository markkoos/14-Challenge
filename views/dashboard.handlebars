<body>
    <form class="form blog-form p-5">
        <h2 class="text-center">New Blog</h2>
        <div class="form-group">
            <label for="blog-title">Blog Title</label>
            <input type="text" class="form-control" id="blog-title" placeholder="Blog Title">
        </div>
        <div class="form-group">
            <label for="blog-text">Blog Text</label>
            <textarea class="form-control" id="blog-text" rows="3"></textarea>
        </div>    
        <div class="form-group">
            <button class="btn btn-primary" type="submit">submit</button>
        </div>
    </form>

    <div class="container blog-cards">
        <h2 class="text-center p-5">Blog Log</h2>
        {{!-- loops over each blog in array --}}
        {{#each blogs as |blog| }}
        <div class="card">
            <div class="card-header">
                Posted by {{blog.user.username}} on {{blog.date_created}}
                {{!-- Posted by {{}} on {{date_created}} --}}
            </div>
            <div class="card-body">
                <h5 class="card-title"><a href="/blog/{{blog.id}}">{{blog.title}}</a></h5>
                <p class="card-text">{{blog.contents}}</p>
            </div>
        </div>
        {{/each}}
    </div>

    <script src="/js/blog.js"></script>
</body>